#!/bin/sh
set -e

TARGET_ROOT="./vendors"

# 引数チェック
if [ $# -eq 0 ]; then
  echo "Usage: $0 VENDOR_ID/CARTRIDGE_ID [VENDOR_ID/CARTRIDGE_ID ...]"
  exit 1
fi

for ITEM in "$@"; do
  # VENDOR_ID と CARTRIDGE_ID に分割
  VENDOR_ID="${ITEM%%/*}"
  CARTRIDGE_ID="${ITEM##*/}"

  if [ -z "$VENDOR_ID" ] || [ -z "$CARTRIDGE_ID" ]; then
    echo "無効な形式: $ITEM"
    continue
  fi

  REPO_URL="https://github.com/$VENDOR_ID/8ppoi-cartridge-$CARTRIDGE_ID.git"
  DIR_NAME="$TARGET_ROOT/$VENDOR_ID/cartridges/$CARTRIDGE_ID"

  if [ -d "$DIR_NAME" ]; then
    echo "スキップ: $DIR_NAME は既に存在"
    continue
  fi

  # ディレクトリ作成
  mkdir -p "$(dirname "$DIR_NAME")"

  echo "クローン: $ITEM → $DIR_NAME"
  git clone "$REPO_URL" "$DIR_NAME" >/dev/null 2>&1
done

echo "完了: 指定されたカートリッジのリポジトリを clone しました"
