#!/bin/sh
set -e

TARGET_DIR="./vendors"

# 引数でベンダーIDを受け取る
if [ $# -eq 0 ]; then
  echo "Usage: $0 <vendor_id1> [vendor_id2 ...]"
  exit 1
fi

for VENDOR_ID in "$@"; do
  DIR_NAME="$TARGET_DIR/$VENDOR_ID"

  if [ -d "$DIR_NAME/.git" ]; then
    echo "更新: $DIR_NAME"
    git -C "$DIR_NAME" pull
    continue
  fi

  echo "クローン: $VENDOR_ID → $DIR_NAME"
  git clone "https://github.com/$VENDOR_ID/8ppoi-vendor.git" "$DIR_NAME"
done

echo "完了: 指定されたベンダーリポジトリを更新しました"
